<!DOCTYPE html>
<html>
  <head>
    <title>FirstApp</title>
    <link href="/public/css/style.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <h1>トップページ</h1>
    <% posts.forEach((post) => { %>
     <div class="post">
        <div class="post-date">
          投稿日時：<%= post.created_at %>
        </div>
        <div class="post-content">
          <%= post.content %>
        </div>
      </div>
    <% }) %>
  </body>
</html>